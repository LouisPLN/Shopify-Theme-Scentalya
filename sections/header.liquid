  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "logo"
    }
  ],
  "locales": {
    "en": {
      "title": "Header"
    },
    "fr": {
      "title": "En-tête"
    }
  }
}
{% endschema %}
